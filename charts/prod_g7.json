{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Producitivity in the G7 Countries",
    "fontSize": 15,
    "subtitle": "Labour producitivity is measured as output per hour of work (in USD PPP). Source: OurWorldinData.org",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/RuiPedroSantos/RuiPedroSantos.github.io/main/data/g7_countries.csv"
  },
  "height": 300,
  "width": 390,
  "background": null,
  "mark": "line",
  "selection": {
    "Entity": {
      "type": "single",
      "fields": ["Entity"],
      "bind": {
        "input": "select",
        "options": [
          null,
          "Canada",
          "France",
          "Japan",
          "United Kingdom",
          "United States",
          "Italy",
          "Germany"
        ],
        "name": "Select country"
      }
    }
  },
  "transform": [{"filter": {"selection": "Entity"}}],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "",
      "axis": {"grid": false}
    },
    "y": {
      "field": "Productivity",
      "type": "quantitative",
      "scale": {"domain": [0, 100]},
      "title": "",
      "axis": {"grid": true},
      "sort": []
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "legend": {"orient": "bottom-right", "columns": 2},
      "sort": [],
      "scale": {"scheme": "inferno"}
    },
    "tooltip": [
      {
        "field": "Year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      {
        "field": "Productivity",
        "type": "quantitative",
        "title": "Productivity"
      },
      {"field": "Entity", "type": "nominal", "title": "Country"}
    ]
  },
  "config": {}
}