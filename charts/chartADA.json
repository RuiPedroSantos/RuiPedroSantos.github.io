{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "Cardano Price",
      "subtitle":"Closing price (USD), Source: CoinAPI",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
     "data": {
      "url": "https://raw.githubusercontent.com/RuiPedroSantos/RuiPedroSantos.github.io/main/data/ADA.json"
    },
    
    "height": 300,
    "width": 280,
     
    "mark": {"type": "line", 
    "point": false,
    "clip": true,
    "color": "firebrick"
    },
   
    "encoding": {
  
      "x": {
        "field": "time_period_start",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false}
      },
  
      "y": {
        "field": "price_close",
        "type": "quantitative",
        "title": null,
        "axis": {"grid": false}
      }
  }
  }